{
  "chat": {
    "typingAnimation": {
      "enabled": true,
      "wordsPerMinute": 1500,
      "minTypingTime": 800,
      "maxTypingTime": 15000,
      "variancePercentage": 15,
      "typingAppliesTo": "both"
    },
    "readDelay": {
      "enabled": true,
      "wordsPerMinute": 3000,
      "minReadTime": 300,
      "maxReadTime": 15000,
      "variancePercentage": 20
    },
    "timeEffects": {
      "transitionDelay": 2,
      "easing": "cubic-bezier(0.19, 1, 0.22, 1)"
    }
  },
  "logging": {
    "mode": "debug",
    "levels": {
      "production": ["warning", "error", "critical"],
      "debug": ["debug", "info", "warning", "error", "critical"]
    }
  },
  "theme": {
    "accentA": "#192b91",  /* Assistant */
    "accentB": "#ffc400",  /* User */
    "accentC": "#000000",  /* Available */
    "accentD": "#000000",  /* Available */
    "accentE": "#000000",  /* Available */
    "accentF": "#000000",  /* Available */
    "accentG": "#000000",  /* Available */
    "accentH": "#000000",  /* Available */
    "accentI": "#000000",  /* Available */
    "accentJ": "#000000",  /* Available */
    "accentK": "#000000",  /* Available */
    "accentL": "#000000",  /* Available */
    "genericAccent": "#909090"
  },
  "directory": {
    "recursiveStyling": {
      "base": {
        "borderWidth": 0.125,
        "borderRadius": 0.375,
        "verticalPadding": 0.5,
        "horizontalPadding": 0.5,
        "marginBottom": 0.5,
        "fontSize": 1
      },
      "scale": {
        "borderWidth": 0.9,
        "borderRadius": 0.85,
        "spacing": 0.9,
        "fontSize": 0.95
      }
    },
    "spans": {
      "enabled": true,
      "maxTags": 15,
      "wikiTagsRatio": 0.6,
      "codeTagsRatio": 0.4,
      "minCount": 1,
      "showCounts": true
    }
  }
} 